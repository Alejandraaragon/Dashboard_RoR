<h1>List of Products</h1>
<br>
  <a href="<%= new_product_path%>" class="btn btn-primary btn-icon-split">
    <span class="icon text-white-50">
    <i class="fas fa-flag"></i>
    </span>
    <span class="text">Create Product</span>
  </a>
  <%= link_to "Export to Excel", products_path(format: :xlsx), class: "btn btn-success"%>
  <br>
  <br>
  <table class="table">
   <thead>
    <tr>
     <th>ID</th>
     <th>Name</th>
     <th>Reference</th>
     <th>Amount</th>
     <th>Actions</th>
    </tr>
   </thead>
   <tbody>
   <% @products.each do |product| %>
     <tr>
      <td><%= product.id %></td>
      <td><%= product.name %></td>
      <td><%= product.reference %></td>
      <td><%= product.quantity %></td>
      <td><%= link_to "Detalles", product_path(product), class: "btn btn-primary" %></td>
     </tr>
     <%end%>
   </tbody>
  </table>



